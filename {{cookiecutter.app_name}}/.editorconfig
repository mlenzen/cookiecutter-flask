# http://editorconfig.org
root = true

[*]
indent_size = 3
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = false

[*.{py,ini,rst}]
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space

[*.{js,json}]
indent_size = 2
indent_style = space

[*.{html,jinja2.html,jinja2}]
indent_size = 2
indent_style = space

[*.{css,less,scss,sass}]
indent_size = 2
indent_style = space

[elasticbeanstalk-nginx-docker-proxy.conf]
indent_size = 2
indent_style = space
